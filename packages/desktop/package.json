{
	"name": "desktop",
	"version": "1.0.0",
	"description": "Electron desktop shell",
	"author": "Max",
	"type": "module",
	"main": "dist/main.js",
	"scripts": {
		"electronBuild": "rm -rf ../../dist/desktop && electron-builder build --publish=never --mac"
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"electron": "39.2.1",
		"electron-builder": "^26.0.12"
	},
	"build": {
		"appId": "EITNespaper.1.0.0",
		"productName": "EIT News paper",
		"icon": "./Logo.png",
		"directories": {
			"output": "../../dist/desktop",
			"buildResources": "build"
		},
		"files": [
			"dist/**",
			"!**/*.map"
		],
		"extraResources": [
			{
				"from": "../web/dist",
				"to": "renderer"
			}
		],
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"arm64"
					]
				}
			],
			"hardenedRuntime": true,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"icon": "./Logo.icns"
		}
	}
}
